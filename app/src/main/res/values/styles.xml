<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item><!--App bar 的背景色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--状态栏背景色-->
        <item name="colorAccent">@color/app_green
        </item><!--各控制元件(如：check box、switch 或是 radoi) 被勾选 (checked) 或是选定 (selected) 的颜色-->
        <item name="colorControlNormal">@color/grey_700</item><!--各控制元件的预设颜色。-->
        <item name="android:textColorPrimary">@color/app_red</item><!--App bar 上的标题与更多菜单中的文字颜色,以及默认的文字颜色-->
        <item name="android:windowBackground">@color/grey</item><!--App 的背景色。-->
    </style>

    <style name="AppNoActionBarNightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!--无导航栏 -->
        <item name="windowActionBar">false</item>
        <!--无标题栏 -->
        <item name="windowNoTitle">true</item>
        <!--全屏-->
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="LightBaseActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
    </style>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowActionBar">false</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="actionBarStyle">@style/LightBaseActionBarStyle</item>-->
    </style>

    <!-- 日间主题 -->
    <style name="DayTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="root_view_bg">@color/grey</item>
        <item name="btn_bg">@color/grey_400</item>
        <item name="text_color">@color/grey_800</item>
    </style>

    <!-- 夜间主题 -->
    <style name="NightTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/grey_600</item>
        <item name="colorPrimaryDark">@color/grey_600</item>
        <item name="colorAccent">@color/grey_300</item>
        <item name="root_view_bg">@color/grey_700</item>
        <item name="btn_bg">@color/grey_700</item>
        <item name="text_color">@color/grey</item>
    </style>


</resources>
